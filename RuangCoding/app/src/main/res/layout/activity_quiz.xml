<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".menu.QuizActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/_1sdp"
            android:background="@color/colorPrimaryDark"
            android:text="Kuis"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_below="@+id/txt22"
            android:layout_marginBottom="@dimen/_2sdp"
            android:id="@+id/linear"
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:layout_height="fill_parent">
        </LinearLayout>

        <TextView
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear"
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:padding="@dimen/_8sdp"
            android:text="Apakah Benar?"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />

        <com.zolad.zoominimageview.ZoomInImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/question"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_10sdp" />

        <Button
            android:id="@+id/answer1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_24sdp"
            android:background="@drawable/custom_button_white"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="left"
            android:padding="@dimen/_8sdp"
            android:text="a. Benar"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_14sdp" />

        <Button
            android:textSize="@dimen/_14sdp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:id="@+id/answer2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/answer1"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_24sdp"
            android:background="@drawable/custom_button_white"
            android:gravity="left"
            android:padding="@dimen/_8sdp"
            android:text="b. Iya"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"  />

        <Button
            android:textSize="@dimen/_14sdp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:id="@+id/answer3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/answer2"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_24sdp"
            android:background="@drawable/custom_button_white"
            android:gravity="left"
            android:padding="@dimen/_8sdp"
            android:text="c. Bisa jadi"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"  />

        <Button
            android:textSize="@dimen/_14sdp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:id="@+id/answer4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/answer3"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_24sdp"
            android:background="@drawable/custom_button_white"
            android:gravity="left"
            android:padding="@dimen/_8sdp"
            android:text="d. Salah"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary" />

        <Button
            android:textSize="@dimen/_14sdp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:id="@+id/answer5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/answer4"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_24sdp"
            android:background="@drawable/custom_button_white"
            android:gravity="left"
            android:padding="@dimen/_8sdp"
            android:text="e. Tidak"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary" />

        <Button
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:id="@+id/quit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/answer5"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="@drawable/custom_button_red"
            android:padding="@dimen/_8sdp"
            android:text="quit"
            android:textColor="@color/white"
            android:textSize="@dimen/_17sdp" />

    </RelativeLayout>

</ScrollView>